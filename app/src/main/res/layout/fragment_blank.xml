<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_layout"
    app:layoutDescription="@xml/fragment_blank_scene"
    tools:context=".view.BlankFragment">

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/imege_decor"
        app:layout_constraintBottom_toBottomOf="@id/content_image"
        app:layout_constraintLeft_toLeftOf="@id/content_image"
        app:layout_constraintRight_toRightOf="@id/content_image"
        app:layout_constraintTop_toTopOf="@id/content_image" />


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_back_decor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/content_description_back"
        app:layout_constraintBottom_toBottomOf="@id/content_image" />


    <ImageButton
        android:id="@+id/imageButton_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:foregroundGravity="center"
        android:src="@drawable/ic_play_2"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:layout_anchorGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="@id/btn_bookmark"
        app:layout_constraintRight_toLeftOf="@id/btn_bookmark"
        app:layout_constraintTop_toTopOf="@id/btn_bookmark" />

    <ImageButton
        android:id="@+id/imageButton_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/thumb"
        android:foregroundGravity="center"
        android:src="@drawable/ic_play_1"
        app:layout_constraintBottom_toTopOf="@id/title_back_decor"
        app:layout_constraintLeft_toLeftOf="@id/title_back_decor"
        app:layout_constraintRight_toRightOf="@id/title_back_decor"
        app:layout_constraintTop_toTopOf="@id/title_back_decor" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/title_back_decor"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_duration">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:text="buy ticket"
            android:textColor="@color/white" />

        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/circular_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:outlineProvider="bounds"
            app:direction="clockwise"
            app:drawDot="false"
            app:enableProgressAnimation="true"
            app:gradientEndColor="#202322"
            app:gradientType="linear"
            app:progressBackgroundColor="@color/white"
            app:progressCap="butt"
            app:progressColor="@color/white"
            app:progressStrokeWidth="3dp"
            app:textColor="#202322"
            app:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>